// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id         String         @id @unique
  email      String
  name       String
  imageURL   String?
  trips      TripAccounts[]
  tripsAdmin Trip[]
}

model Trip {
  id        String  @id @default(uuid())
  tripName  String
  tripImage String?

  // Store accounts on those that go on the trip
  accounts TripAccounts[]

  // Store admin data on who created the trip
  admin   Account @relation(fields: [adminID], references: [id])
  adminID String

  // Store info on when the trip "plan" was created
  created   DateTime @default(now())
  startDate DateTime @db.Date
  endDate   DateTime @db.Date

  // Add locations to the trip
  locations Location[]
  invites   TripInvite[]

}

model TripAccounts {
  account   Account @relation(fields: [accountID], references: [id])
  accountID String
  trip      Trip    @relation(fields: [tripID], references: [id])
  tripID    String

  @@id([accountID, tripID])
}

model Location {
    id         Int                 @id @default(autoincrement())
    lat        Float
    long       Float
    placeID    String              @unique
    name       String
    trips      Trip[]
}

model TripInvite {
    id          String @id @default(uuid())
    email       String
    trip        Trip @relation(fields: [tripID], references: [id])
    tripID      String
    created     DateTime @default(now())
}